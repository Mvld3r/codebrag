// commits
.items-list
  position: relative;

.branch-selector
  padding: 0.77em 0.38em;
  position: relative;
  z-index: 3;

  & .repo-btn
    height: 100%;
    width: 35px;
    min-width: 45px;
    padding-right: 0.76rem;
    float: left;

  & .branch-btn
    height: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    position: absolute;
    left: 51px;
    right: 5px;

  // & .branches-list
  
  & .columns
    padding: 0 0.38em;

    & .dropdown-btn

      &.btn-small
        margin: 0 auto;
        padding: 0.66em 0;
        background-image: none

      & .selected
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis

        & .selected-label
          text-overflow: ellipsis

      &:hover
        & ul
          display: block;

      & span
        vertical-align: baseline;
        & img
          vertical-align: top;

        & li
          padding: 0.66em 1.5em;
          text-transform: none;
          transition: background-color 300ms;
          vertical-align: medium;
          cursor: pointer;

          &:hover, &.selected
            color: white;
            background-color: $main-orange-color;

          & span
            white-space: nowrap;
            vertical-align: baseline;
            overflow: hidden;
            display: block;
            text-overflow: ellipsis;

            & img
              vertical-align: top;

          & i
            vertical-align: baseline;
            float: right;
            padding-left: 10px;
            width: 22px;

.list-loader
  position: relative;
  display:none;
  & .info
    position:absolute;
    width: 100%;
    padding: 10px;
    background: rgba(211,196,160,0.9);
    color: #fff;
    text-align: center;
    font-weight: bold;
    z-index: 2;

.items-container
  margin-top: -1px;
  overflow-x: hidden;
  overflow-y: hidden;
  &:hover
    overflow-y: auto;

.load-previous-wrapper
  border-top: none;
  text-align: center;

.load-next-wrapper
  border-top: 1px solid #d1cbb9;
  text-align: center;

.commit-container
  border-top: 1px solid $main-border-color;
  padding: 1.15em 2.3em 0.77em 0.77em;
  position: relative;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;
  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 2.3em;
    margin-right: 0.77em;
    width: 2.3em;
  & .commit-name
    color: #70493e;
    font-weight: bold;
    margin-bottom: 0.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

  &.reviewed
    background: #ebe6d7;
    &:hover
      background: #f1eee4;

    & .author-box
      opacity: 0.7;

    & .info-box
      opacity: 0.8;
      color: #023818;

    &.active
      & .author-box,
      .info-box
        opacity: 1;

  &.active
    background: white;
    z-index:2;
    &:before
      background: $main-orange-color;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: .38em;
      z-index: 1;
    & i
      display: block;

.items-container .commit-container:first-child
  margin-top: -1px;

.items-container .commit-container:last-child
  border-bottom: 1px solid $main-border-color;

.commits-count
  background: $body-bg-color;
  border-top: 1px solid $main-border-color;
  bottom: 0;
  color: $second-body-text-color;
  margin-top: -1px;
  padding: 1.15em 0;
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;
  & span
    margin-right: 3px;

.no-more-items
  color: rgb(173, 130, 69);
  font-size: 22px;
  font-weight: bold;
  margin-top: 3em;
  min-height: 154px;
  min-width: 156px;
  padding-top: 132px;
  text-align: center;
  text-transform: uppercase;

.followup-container.followup-waiting
	border-left: 2px dotted #f55902;
	
	&.active
		border-left: none;

// followups
#followups-tab-content
  padding-top: 1.15em;

  & .items-container
    padding: 0 0.77em 0 0.38em;


.followups-container
  background: $followups-container-bg;
  margin-bottom: 1.15em;
  padding: 0.77em 0.38em 0.38em;

  & .info-line
    color: $followup-infoline-color;
    margin-bottom: 0.77em;

  & .commit-name
    color: $followup-commit-name-color;
    font-weight: bold;
    margin-bottom: 0.4em;
    opacity: 0.75;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

.followup-container
  background: $body-bg-color;
  border: 1px solid #e2d8bf;
  margin-top: -1px;
  padding: 0.77em 2.3em 0.77em 0.77em;
  position: relative;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;

  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 1.54em;
    margin-right: 0.77em;
    width: 1.54em;
  & .comment
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  &.active
    background: white;
    width: 480px;
    z-index: 2;
    &:before
      background: #f3720b;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: 0.38em;
      z-index: 1;